<h1 style="font-size:40px;"><%= @article.title %></h1>

<h5  style="text-align:center;"><p><%= @article.created_at.strftime("%Y年%m月%d日 %H時%M分 作成") %></p></h5> <!-- 作成日時 -->
<% if @article.updated_at != @article.created_at %>
    <h5  style="text-align:center;"><p><%= @article.updated_at.strftime("%Y年%m月%d日 %H時%M分 更新") %></p></h5> <!-- 更新したとき、その日時も表示 -->
<% end %>

<% unless @article.image == "" %> <!-- 画像リンクがあるとき -->
    <div style="text-align:center;"><img src="<%= @article.image %>" style="max-width:35vw;min-width:25vw"></div> <!-- ヘッダー画像 -->
<% end %>

<p><h3 style="text-align:center"><%= raw @article.content %></h3></p> <!-- 本文 -->