<!DOCTYPE html>
<html lang="ja">
  <head>

    <%= favicon_link_tag('favicon.ico') %>

    <title>
      <%= content_for?(:html_title) ? yield(:html_title) : "" %> Daruo
    </title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta http-equiv="content-language" content="ja">
    <meta charset="utf-8">
    
    <meta name="twitter:site"    content="@DaruoUni" />
    <meta name="twitter:card" content="summary" />
    <meta property="og:site_name" content="🥤Daruo" />
    <meta property="og:type" content="ポートフォリオサイト" />
    <meta property="og:url" content="https://daruo.dev" />

    <%= yield :meta_tags %>

    <meta property="og:image:width" content="300" />
    <meta property="og:image:height" content="300" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield :head %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
